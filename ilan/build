if [ $# != 3 ]; then
  echo "Usage: build <version> <IBMid> <IBMid password>"
  exit 1
fi

docker build -t installation-manager im || exit $?
docker run --rm -v $(pwd):/host installation-manager /host/install_ihs $1 $2 $3 || exit $?
